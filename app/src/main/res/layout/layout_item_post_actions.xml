<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/action_bar_icon_size"
        android:layout_height="@dimen/action_bar_icon_size"
        android:id="@+id/ivHeart"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_heart"
        android:contentDescription="@string/heart_img_description"
        android:layout_marginTop="@dimen/action_bar_icon_margin"
        android:layout_marginBottom="@dimen/action_bar_icon_margin"
        android:layout_marginRight="@dimen/action_bar_heart_spacing"
        android:layout_marginEnd="@dimen/action_bar_heart_spacing" />

    <ImageView
        android:layout_width="@dimen/action_bar_icon_size"
        android:layout_height="@dimen/action_bar_icon_size"
        android:id="@+id/ivComment"
        android:src="@drawable/ic_comment"
        android:contentDescription="@string/comment_img_description"
        android:layout_alignTop="@+id/ivHeart"
        android:layout_toRightOf="@+id/ivHeart"
        android:layout_toEndOf="@+id/ivHeart" />

    <ImageView
        android:layout_width="@dimen/action_bar_icon_dots_width"
        android:layout_height="@dimen/action_bar_icon_size"
        android:id="@+id/ivMOreDots"
        android:src="@drawable/ic_more_dots"
        android:contentDescription="@string/comment_img_description"
        android:layout_alignTop="@+id/ivHeart"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/separator_height"
        android:background="@color/light_gray_separator_line"
        android:layout_below="@+id/ivHeart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
</RelativeLayout>