<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/search_item_height" >

    <ImageView
        android:id="@+id/ivUserAvatar"
        android:layout_width="@dimen/user_avatar_size"
        android:layout_height="@dimen/user_avatar_size"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/user_avatar_right"
        android:layout_marginEnd="@dimen/user_avatar_right"
        android:layout_marginLeft="@dimen/user_avatar_left"
        android:layout_marginStart="@dimen/user_avatar_left"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:lineSpacingMultiplier="@dimen/line_space_x"
        android:layout_alignTop="@+id/ivUserAvatar"
        android:layout_toRightOf="@+id/ivUserAvatar"
        android:layout_toEndOf="@+id/ivUserAvatar" />

    <TextView
        android:id="@+id/tvUserFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/font_size"
        android:textColor="@color/light_gray_text"
        android:layout_below="@+id/tvUserName"
        android:layout_alignLeft="@+id/tvUserName"
        android:layout_alignStart="@+id/tvUserName" />

</RelativeLayout>