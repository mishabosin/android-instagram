<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivCommentAvatar"
        android:layout_width="@dimen/comment_avatar_size"
        android:layout_height="@dimen/comment_avatar_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/comment_avatar_margin"
        android:layout_marginStart="@dimen/comment_avatar_margin"
        android:layout_marginTop="@dimen/comment_avatar_margin"
        android:layout_marginRight="@dimen/comment_avatar_margin_right"
        android:layout_marginEnd="@dimen/comment_avatar_margin_right"/>

    <TextView
        android:id="@+id/tvCommentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:lineSpacingMultiplier="@dimen/line_space_x"
        android:layout_alignTop="@+id/ivCommentAvatar"
        android:layout_toRightOf="@+id/ivCommentAvatar"
        android:layout_toEndOf="@+id/ivCommentAvatar" />

    <TextView
        android:id="@+id/tvCommentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/font_size"
        android:textColor="@color/light_gray_text"
        android:layout_below="@+id/tvCommentText"
        android:layout_alignLeft="@+id/tvCommentText"
        android:layout_alignStart="@+id/tvCommentText" />
</RelativeLayout>